# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
ALLOWED_HOSTS=*

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://localhost:3000

# Azure Cosmos DB (MongoDB API)
# Connection string is stored in Azure Key Vault
MONGODB_CONNECTION_STRING_SECRET=mongodb-connection-string
MONGODB_DATABASE_NAME=imagegenerator

# Legacy Azure Cosmos DB SQL API (optional, for backward compatibility)
# AZURE_COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
# COSMOS_DATABASE_NAME=imagegenerator
# COSMOS_CONTAINER_NAME=images

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_URL=https://your-storage-account.blob.core.windows.net/
BLOB_CONTAINER_NAME=imagegen-images
STORAGE_CONTAINER_NAME=images  # Legacy

# Azure CDN (Optional, for global image delivery)
AZURE_CDN_ENDPOINT_URL=https://your-cdn-endpoint.azureedge.net
AZURE_CDN_PROFILE_NAME=imagegen-cdn-profile

# Blob Storage Lifecycle Management
LIFECYCLE_COOL_TIER_DAYS=30
LIFECYCLE_ARCHIVE_TIER_DAYS=90
LIFECYCLE_DELETE_DAYS=365

# Azure Key Vault (Required for MongoDB connection string)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Azure Service Bus (Required for async image generation)
AZURE_SERVICEBUS_NAMESPACE=imagegen-servicebus
SERVICEBUS_QUEUE_NAME=image-generation-queue

# Azure Content Safety (Optional)
AZURE_CONTENT_SAFETY_ENDPOINT=https://your-content-safety.cognitiveservices.azure.com/

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://region.applicationinsights.azure.com/

# Azure AD B2C Authentication Settings
# Tenant format: your-tenant-name.onmicrosoft.com
AZURE_AD_B2C_TENANT=your-tenant-name.onmicrosoft.com
AZURE_AD_B2C_CLIENT_ID=your-application-client-id
AZURE_AD_B2C_POLICY_NAME=B2C_1_signupsignin
# Client secret (optional, only needed for server-side token exchange)
AZURE_AD_B2C_CLIENT_SECRET=your-client-secret-if-needed

# Authentication Settings
SECRET_KEY=your-secret-key-change-in-production-min-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Azure Managed Identity
# For user-assigned managed identity, set the client ID
# AZURE_CLIENT_ID=your-user-assigned-identity-client-id
MANAGED_IDENTITY_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Replicate API (Required for image generation)
REPLICATE_API_TOKEN=r8_your_replicate_api_token_here

# Worker Settings
WORKER_MAX_CONCURRENT_JOBS=5
