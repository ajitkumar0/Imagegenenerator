# ============================================================================
# Backend API Configuration
# ============================================================================

# Backend API base URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# API version (if needed)
NEXT_PUBLIC_API_VERSION=/api/v1

# WebSocket URL for real-time updates
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# ============================================================================
# Azure AD B2C Configuration
# ============================================================================

# Your Azure AD B2C tenant name (e.g., "mycompany" from mycompany.b2clogin.com)
NEXT_PUBLIC_AZURE_AD_B2C_TENANT=your-tenant-name

# Application (client) ID from Azure AD B2C app registration
NEXT_PUBLIC_AZURE_AD_B2C_CLIENT_ID=your-client-id-here

# User flow/policy names
NEXT_PUBLIC_AZURE_AD_B2C_POLICY_NAME=B2C_1_signupsignin
NEXT_PUBLIC_AZURE_AD_B2C_FORGOT_PASSWORD_POLICY=B2C_1_password_reset
NEXT_PUBLIC_AZURE_AD_B2C_EDIT_PROFILE_POLICY=B2C_1_profile_edit

# API scope for accessing backend
NEXT_PUBLIC_API_SCOPE=https://your-tenant-name.onmicrosoft.com/api/access

# ============================================================================
# Authentication Redirects
# ============================================================================

# Redirect URI after successful login (must match Azure AD B2C config)
NEXT_PUBLIC_REDIRECT_URI=http://localhost:3000/auth/callback

# Post-logout redirect URI
NEXT_PUBLIC_POST_LOGOUT_REDIRECT_URI=http://localhost:3000

# ============================================================================
# Stripe Configuration (Public Key Only!)
# ============================================================================

# Stripe publishable key (starts with pk_test_ or pk_live_)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# ============================================================================
# Application Configuration
# ============================================================================

# Application name
NEXT_PUBLIC_APP_NAME=ImageGenerator AI

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment (development, staging, production)
NEXT_PUBLIC_ENVIRONMENT=development

# Enable debug mode
NEXT_PUBLIC_DEBUG=true

# ============================================================================
# Feature Flags
# ============================================================================

# Enable real-time generation updates via WebSocket
NEXT_PUBLIC_ENABLE_REALTIME_UPDATES=true

# Enable analytics tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Analytics tracking ID (Google Analytics, etc.)
NEXT_PUBLIC_ANALYTICS_ID=

# ============================================================================
# Rate Limiting & Polling
# ============================================================================

# Polling interval for generation status (milliseconds)
NEXT_PUBLIC_POLL_INTERVAL=2000

# Max polling attempts before timeout
NEXT_PUBLIC_MAX_POLL_ATTEMPTS=30

# ============================================================================
# Image Configuration
# ============================================================================

# Maximum file size for uploads (bytes)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Allowed image formats
NEXT_PUBLIC_ALLOWED_FORMATS=image/png,image/jpeg,image/jpg,image/webp

# ============================================================================
# Error Tracking (Optional)
# ============================================================================

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=

# ============================================================================
# Production Configuration (Additional)
# ============================================================================

# For production, also set these:
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com/ws
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
# NEXT_PUBLIC_REDIRECT_URI=https://yourdomain.com/auth/callback
# NEXT_PUBLIC_POST_LOGOUT_REDIRECT_URI=https://yourdomain.com
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
# NEXT_PUBLIC_ENVIRONMENT=production
# NEXT_PUBLIC_DEBUG=false

# ============================================================================
# Security Notes
# ============================================================================
#
# IMPORTANT:
# - Never commit .env.local to version control
# - Only expose public keys (NEXT_PUBLIC_* variables are exposed to browser)
# - Keep secret keys (API keys, database credentials) in server-side only
# - Use different values for development, staging, and production
# - Rotate keys regularly
# - Use Azure Key Vault for production secrets
#
# Public vs Private:
# - NEXT_PUBLIC_* = Exposed to browser (safe for public keys only)
# - No prefix = Server-side only (for secret keys)
#
# ============================================================================
